@model IEnumerable<ZTP_Project.Models.Group>

<h2>Select a group and mode</h2>

<form method="get" asp-action="Question">
    <div class="form-group">
        <label for="groupId">Select a group:</label>
        <select id="groupId" name="groupId" class="form-control" required>
            <option value="">-- Select a group --</option>
            @if (ViewBag.IncludeAllOption == true)
            {
            <option value="-1">All</option>
            }
            @foreach (var g in Model)
            {
            <option value="@g.Id">@g.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="mode">Select learning mode:</label>
        <select id="mode" name="mode" class="form-control" required>
            <option value="">-- Select a mode --</option>
            <option value="Flashcards">Flashcards</option>
            <option value="MultipleChoice">Multiple Choice</option>
            <option value="FillInTheBlank">Fill In The Blank</option>
        </select>
    </div>

    <input type="hidden" name="isNewSession" value="true" />

    <button type="submit" class="btn btn-primary mt-2">Start</button>
</form>